{
	"bsonType": "object",
	"required": ["user_id", "activity_id"],
	"permission": {
		"read": true,
		"create": "auth.uid != null",
		"update": "doc.user_id == auth.uid",
		"delete": "doc.user_id == auth.uid"
	},
	"properties": {
		"_id": {
			"description": "ID，系统自动生成"
		},
		"user_id": {
			"bsonType": "string",
			"description": "用户ID（对应uni-id-users表的_id）"
		},
		"activity_id": {
			"bsonType": "string",
			"description": "活动ID（对应add-content表的_id）"
		},
		"user_info": {
			"bsonType": "object",
			"description": "用户信息（昵称、头像等）",
			"properties": {
				"nickname": { "bsonType": "string", "description": "用户昵称", "default": "" },
				"avatar": { "bsonType": "string", "description": "用户头像URL", "default": "" }
			}
		},
		"join_time": {
			"bsonType": "long",
			"description": "参与时间戳（毫秒级）"
		},
		"status": {
			"bsonType": "string",
			"description": "参与状态（如joined/left）",
			"enum": ["joined", "left"]
		},
		"create_date": {
			"bsonType": "timestamp",
			"description": "记录创建时间",
			"defaultValue": {
				"$env": "now"
			}
		}
	}
}