.activity-card {
  width: 500rpx;
  margin-right: 20rpx;
  border-radius: 16rpx;
  background-color: #FFFFFF;
  overflow: hidden;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
  transition: all 0.3s;
  position: relative;
  border: 1rpx solid rgba(0, 0, 0, 0.02);
}
.activity-card:active {
  transform: scale(0.98);
  opacity: 0.9;
}
.activity-card .activity-image {
  width: 100%;
  height: 240rpx;
  background-color: #F5F5F5;
}
.activity-card .activity-tag {
  position: absolute;
  top: 20rpx;
  left: 20rpx;
  padding: 6rpx 20rpx;
  border-radius: 30rpx;
  font-size: 24rpx;
  color: #FFFFFF;
}
.activity-card .activity-tag.hot {
  background-color: rgba(217, 160, 100, 0.9);
}
.activity-card .activity-tag.official {
  background-color: rgba(77, 124, 191, 0.9);
}
.activity-card .activity-content {
  padding: 20rpx;
}
.activity-card .activity-content .activity-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 15rpx;
  white-space: normal;
  color: #4E5969;
}
.activity-card .activity-content .activity-desc {
  font-size: 28rpx;
  color: #86909C;
  margin-bottom: 16rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  white-space: normal;
  line-height: 1.5;
}
.activity-card .activity-content .activity-info {
  display: flex;
  align-items: center;
  font-size: 24rpx;
  color: #86909C;
  margin-bottom: 16rpx;
  flex-wrap: wrap;
}
.activity-card .activity-content .activity-info .iconfont {
  margin-right: 6rpx;
}
.activity-card .activity-content .activity-info text {
  margin-right: 20rpx;
}
.activity-card .activity-content .activity-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.activity-card .activity-content .activity-footer .participants {
  display: flex;
  align-items: center;
}
.activity-card .activity-content .activity-footer .participants .participant-avatar {
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  margin-right: -16rpx;
  border: 2rpx solid #FFFFFF;
  box-shadow: 0 1rpx 3rpx rgba(0, 0, 0, 0.05);
}
.activity-card .activity-content .activity-footer .participants .participant-count {
  font-size: 24rpx;
  color: #86909C;
  margin-left: 20rpx;
}
.activity-card .activity-content .activity-footer .join-btn {
  padding: 8rpx 30rpx;
  background-color: rgba(77, 124, 191, 0.9);
  color: #FFFFFF;
  border-radius: 30rpx;
  font-size: 24rpx;
  border: none;
}
.activity-card .activity-content .activity-footer .join-btn:active {
  background-color: #3A5F95;
  transform: scale(0.95);
}