.category-item {
  padding: 16rpx 30rpx;
  margin-right: 20rpx;
  border-radius: 30rpx;
  background-color: rgba(0, 0, 0, 0.03);
  transition: all 0.2s;
  /* 确保高度一致 */
  height: 64rpx;
  box-sizing: border-box;
  /* 确保文字和图标垂直居中 */
  display: flex;
  align-items: center;
  justify-content: center;
  /* 确保点击区域足够大 */
  min-width: 120rpx;
}
.category-item.active {
  background-color: #4D7CBF;
  color: #FFFFFF;
  transform: scale(1);
  font-weight: 500;
  box-shadow: 0 2rpx 8rpx rgba(77, 124, 191, 0.25);
}
.category-item-active {
  opacity: 0.8;
  transform: scale(0.98);
}
.category-icon {
  margin-right: 15rpx;
  font-size: 28rpx;
  line-height: 1;
}
.category-text {
  line-height: 1;
  font-size: 28rpx;
  color: #4E5969;
}
.active .category-text {
  color: #FFFFFF;
}
/* 适配微信小程序 - MP兼容性 */
.mp-animation.category-item.active {
  animation: none;
  transform: scale(1.02);
}