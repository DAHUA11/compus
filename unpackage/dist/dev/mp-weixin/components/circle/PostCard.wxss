.post-card {
  padding: 20rpx;
  margin-bottom: 20rpx;
  background-color: #FFFFFF;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
  transition: all 0.3s;
  position: relative;
  overflow: hidden;
}
.post-card:active {
  transform: scale(0.98);
  opacity: 0.95;
}
.post-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 0 16rpx 0;
}
.post-header .user-info {
  display: flex;
  align-items: center;
  gap: 12rpx;
}
.post-header .post-avatar {
  width: 76rpx;
  height: 76rpx;
  border-radius: 50%;
  background-color: #F5F5F5;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.08);
}
.post-header .post-info {
  display: flex;
  flex-direction: column;
  gap: 4rpx;
}
.post-header .post-info .post-name {
  font-size: 30rpx;
  font-weight: 600;
  color: #4E5969;
  line-height: 1.3;
}
.post-header .post-info .post-meta {
  font-size: 22rpx;
  color: #86909C;
  line-height: 1.2;
}
.post-header .post-header-right {
  display: flex;
  align-items: center;
  gap: 16rpx;
}
.post-header .post-tag {
  padding: 4rpx 16rpx;
  border-radius: 30rpx;
  font-size: 22rpx;
  font-weight: 500;
}
.post-header .post-tag.discussion {
  background: rgba(77, 124, 191, 0.1);
  color: #4D7CBF;
}
.post-header .post-tag.question {
  background: rgba(217, 160, 100, 0.1);
  color: #D9A064;
}
.post-header .post-tag.lost {
  background: rgba(194, 91, 91, 0.1);
  color: #C25B5B;
}
.post-header .post-tag.pin {
  background: rgba(82, 167, 135, 0.1);
  color: #52A787;
}
.post-header .post-tag.official {
  background: rgba(134, 144, 156, 0.1);
  color: #86909C;
}
.post-header .post-tag.promotion {
  background: rgba(162, 89, 236, 0.1);
  color: #a259ec;
}
.post-header .more-btn {
  padding: 8rpx;
  border-radius: 50%;
  transition: all 0.2s;
}
.post-header .more-btn .iconfont {
  font-size: 36rpx;
  color: #86909C;
}
.post-header .more-btn:active {
  background-color: rgba(0, 0, 0, 0.05);
  transform: scale(0.95);
}
.post-content {
  font-size: 28rpx;
  color: #4E5969;
  margin-bottom: 16rpx;
  line-height: 1.5;
  padding-left: 10rpx;
}
.post-images {
  display: flex;
  flex-wrap: wrap;
  margin: 0 -6rpx 16rpx;
  padding-left: 10rpx;
}
.post-images .post-image {
  width: calc(33.33% - 12rpx);
  height: 200rpx;
  margin: 6rpx;
  border-radius: 8rpx;
  background-color: #F5F5F5;
  transition: all 0.2s;
}
.post-images .post-image:active {
  transform: scale(0.95);
}
.post-actions {
  display: flex;
  align-items: center;
  justify-content: space-around;
  border-top: 1rpx solid rgba(0, 0, 0, 0.03);
  padding-top: 16rpx;
  margin-top: 10rpx;
}
.post-actions .action-item {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 8rpx 20rpx;
  border-radius: 30rpx;
  transition: all 0.2s;
}
.post-actions .action-item .action-icon {
  font-size: 32rpx;
  color: #86909C;
  margin-right: 10rpx;
  transition: all 0.2s;
}
.post-actions .action-item .action-text {
  font-size: 24rpx;
  color: #86909C;
  transition: all 0.2s;
}
.post-actions .action-item:active {
  background-color: rgba(0, 0, 0, 0.03);
  transform: scale(0.95);
}
.post-actions .action-item.is-active .action-icon {
  color: #C25B5B;
  animation: heartBeat 0.3s ease-in-out;
}
.post-actions .action-item.is-active .action-text {
  color: #C25B5B;
}
.post-actions .like-btn:active .action-icon {
  color: #C25B5B;
  transform: scale(1.2);
}
.post-actions .comment-btn:active .action-icon {
  color: #4D7CBF;
  transform: scale(1.2);
}
.post-actions .share-btn:active .action-icon {
  color: #52A787;
  transform: scale(1.2);
}
@keyframes heartBeat {
0% {
    transform: scale(1);
}
50% {
    transform: scale(1.3);
}
100% {
    transform: scale(1);
}
}