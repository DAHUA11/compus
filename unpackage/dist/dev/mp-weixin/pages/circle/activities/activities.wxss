.activity-item .action-btn-group .action-btn {
  padding: 8rpx 24rpx;
  font-size: 24rpx;
  border-radius: 24rpx;
  margin-left: 12rpx;
  background: linear-gradient(90deg, #4D7CBF, #7398cc);
  color: #fff;
  border: none;
  transition: all 0.2s;
  line-height: 1.5;
  height: auto;
  min-height: 0;
  font-weight: 500;
}
.activity-item .action-btn-group .action-btn:after {
  display: none;
}
.activity-item .action-btn-group .action-btn:active {
  transform: scale(0.96);
  box-shadow: 0 2rpx 8rpx rgba(77, 124, 191, 0.18);
}
.activity-item .action-btn-group .secondary {
  background: #fff;
  color: #2d5af1;
  border: 3rpx solid #2d5af1;
  box-shadow: none;
  font-weight: 500;
  transition: background 0.2s, color 0.2s, border 0.2s;
}
.activity-item .action-btn-group .secondary:active {
  background: #f5f7fa;
  color: #1741a7;
  border-color: #1741a7;
}
.activity-item .action-btn-group .primary {
  background: linear-gradient(90deg, #2d5af1, #5d80f4);
  color: #fff;
  border: none;
  box-shadow: 0 2rpx 6rpx rgba(45, 90, 241, 0.18);
  font-weight: 500;
}
.activity-item .action-btn-group .primary:active {
  background: linear-gradient(90deg, #1741a7, #2d5af1);
  box-shadow: 0 1rpx 4rpx rgba(45, 90, 241, 0.1);
}
.card-ani {
  opacity: 0;
  transform: translateY(40rpx);
  animation: cardFadeIn 0.7s 0.3s forwards;
}
@keyframes cardFadeIn {
to {
    opacity: 1;
    transform: translateY(0);
}
}
/* 加载和空状态 */
.loading-ani {
  opacity: 0;
  animation: fadeInUp 0.7s 0.4s forwards;
}
.empty-ani {
  opacity: 0;
  animation: fadeInUp 0.7s 0.5s forwards;
}
@keyframes rotate {
from {
    transform: rotate(0deg);
}
to {
    transform: rotate(360deg);
}
}