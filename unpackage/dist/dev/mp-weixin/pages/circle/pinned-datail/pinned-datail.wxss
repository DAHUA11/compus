/* 按钮样式 */
.btn {
  padding: 15rpx 30rpx;
  border-radius: 30rpx;
  font-size: 24rpx;
  border: none;
  transition: all 0.2s;
}
.btn:active {
  transform: scale(0.98);
  opacity: 0.9;
}
.btn-primary {
  background-color: #4D7CBF;
  color: #FFFFFF;
}
.btn-primary:active {
  background-color: #3A5F95;
}
.btn-outline {
  background-color: transparent;
  border: 1rpx solid #4D7CBF;
  color: #4D7CBF;
}
.btn-outline:active {
  background-color: rgba(77, 124, 191, 0.1);
}
.btn-text {
  background-color: transparent;
  color: #4D7CBF;
  padding: 15rpx;
}
.btn-text:active {
  background-color: transparent;
  opacity: 0.7;
}
