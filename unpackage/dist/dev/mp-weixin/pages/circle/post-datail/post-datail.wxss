.post-detail-bg {
  min-height: 100vh;
  background: #f8f9fc;
  padding-bottom: 120rpx;
}
.post-detail-container {
  margin: 32rpx 0;
  padding: 0 24rpx 24rpx 24rpx;
}
.post-header-card {
  display: flex;
  align-items: center;
  background: #FFFFFF;
  border-radius: 18rpx;
  box-shadow: 0 4rpx 16rpx rgba(77, 124, 191, 0.08);
  padding: 24rpx;
  margin-bottom: 24rpx;
}
.post-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  border: 2rpx solid #e5e7eb;
  background: #f5f6fa;
  margin-right: 20rpx;
}
.post-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
}
.post-name-row {
  display: flex;
  align-items: center;
  margin-bottom: 8rpx;
}
.post-name {
  font-size: 32rpx;
  font-weight: 600;
  color: #4E5969;
  margin-right: 16rpx;
}
.post-tag {
  padding: 4rpx 16rpx;
  border-radius: 12rpx;
  font-size: 22rpx;
  font-weight: 500;
  background: rgba(77, 124, 191, 0.1);
  color: #4D7CBF;
}
.post-tag.discussion {
  background: rgba(77, 124, 191, 0.1);
  color: #4D7CBF;
}
.post-tag.question {
  background: rgba(217, 160, 100, 0.1);
  color: #D9A064;
}
.post-tag.lost {
  background: rgba(194, 91, 91, 0.1);
  color: #C25B5B;
}
.post-tag.pin {
  background: rgba(82, 167, 135, 0.1);
  color: #52A787;
}
.post-tag.official {
  background: rgba(134, 144, 156, 0.1);
  color: #86909C;
}
.post-tag.promotion {
  background: rgba(162, 89, 236, 0.1);
  color: #a259ec;
}
.post-meta {
  font-size: 22rpx;
  color: #86909C;
}
.post-content-block {
  background: #FFFFFF;
  border-radius: 16rpx;
  padding: 32rpx 24rpx 24rpx 24rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 2rpx 8rpx rgba(77, 124, 191, 0.04);
}
.post-content {
  font-size: 30rpx;
  color: #4E5969;
  line-height: 1.8;
  margin-bottom: 24rpx;
  display: block;
}
.post-images {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
}
.post-images .post-image {
  width: calc(33.33% - 8rpx);
  height: 200rpx;
  border-radius: 12rpx;
  background-color: #F5F5F5;
  object-fit: cover;
}
.post-actions {
  display: flex;
  align-items: center;
  justify-content: space-around;
  background: #FFFFFF;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 8rpx rgba(77, 124, 191, 0.04);
  padding: 18rpx 0;
  margin-bottom: 24rpx;
}
.post-actions .action-item {
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 32rpx;
  padding: 8rpx 32rpx;
  font-size: 28rpx;
  transition: all 0.2s;
}
.post-actions .action-item .action-icon {
  font-size: 36rpx;
  margin-right: 10rpx;
  color: #86909C;
  transition: all 0.2s;
}
.post-actions .action-item .action-text {
  font-size: 26rpx;
  color: #86909C;
}
.post-actions .action-item.like-btn.is-active .action-icon {
  color: #C25B5B;
  animation: likeAnimation 0.5s ease;
}
.post-actions .action-item:active {
  background: #F2F3F5;
  transform: scale(0.96);
}
.comment-section {
  background: #FFFFFF;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 8rpx rgba(77, 124, 191, 0.04);
  padding: 24rpx;
  margin-bottom: 24rpx;
}
.comment-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #4D7CBF;
  margin-bottom: 18rpx;
}
.comment-empty {
  color: #86909C;
  font-size: 24rpx;
  text-align: center;
  padding: 32rpx 0;
}
.comment-list {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}
.comment-item {
  display: flex;
  align-items: flex-start;
}
.comment-avatar {
  width: 56rpx;
  height: 56rpx;
  border-radius: 50%;
  margin-right: 16rpx;
  background: #f5f6fa;
  border: 1rpx solid #e5e7eb;
}
.comment-content-block {
  flex: 1;
  display: flex;
  flex-direction: column;
}
.comment-header {
  display: flex;
  align-items: center;
  gap: 12rpx;
  margin-bottom: 4rpx;
}
.comment-name {
  font-size: 26rpx;
  font-weight: 500;
  color: #4E5969;
}
.comment-time {
  font-size: 20rpx;
  color: #86909C;
}
.comment-text {
  font-size: 26rpx;
  color: #1D2129;
  margin-bottom: 8rpx;
}
.comment-actions {
  display: flex;
  align-items: center;
  gap: 18rpx;
}
.comment-like-btn {
  display: flex;
  align-items: center;
  color: #86909C;
  font-size: 24rpx;
  border-radius: 24rpx;
  padding: 4rpx 12rpx;
  transition: all 0.2s;
}
.comment-like-btn:active {
  background: #F2F3F5;
  color: #C25B5B;
}
.comment-like-btn.liked {
  color: #C25B5B;
}
.comment-like-btn.liked .iconfont {
  color: #C25B5B;
  animation: likeAnimation 0.5s ease;
}
.comment-like-btn.liked .like-count {
  color: #C25B5B;
}
.like-count {
  margin-left: 6rpx;
  font-size: 24rpx;
  color: #86909C;
}
.comment-input-bar {
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100vw;
  background: #FFFFFF;
  box-shadow: 0 -2rpx 8rpx rgba(77, 124, 191, 0.06);
  display: flex;
  align-items: center;
  padding: 16rpx 24rpx;
  z-index: 99;
}
.comment-input {
  flex: 1;
  height: 64rpx;
  border-radius: 32rpx;
  background: #f5f6fa;
  border: none;
  padding: 0 24rpx;
  font-size: 26rpx;
  margin-right: 16rpx;
}
.send-btn {
  background: #4D7CBF;
  color: #FFFFFF;
  border: none;
  border-radius: 32rpx;
  font-size: 26rpx;
  padding: 0 32rpx;
  height: 64rpx;
  line-height: 64rpx;
  transition: all 0.2s;
}
.send-btn:disabled {
  background: #86909C;
  color: #fff;
  opacity: 0.5;
}
@keyframes likeAnimation {
0% {
    transform: scale(1);
}
50% {
    transform: scale(1.4);
}
100% {
    transform: scale(1);
}
}